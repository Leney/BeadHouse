<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/selector_list_item"
    android:gravity="center_vertical"
    android:padding="@dimen/space_12">

    <ImageView
        android:id="@+id/old_man_account_adapter_icon"
        android:layout_width="@dimen/space_54"
        android:layout_height="@dimen/space_54"
        android:scaleType="fitXY"
        android:src="@mipmap/personal_default_icon" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_12"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/old_man_account_adapter_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="李大帅"
            android:textColor="@color/text_333333"
            android:textSize="@dimen/text_size_16" />

        <TextView
            android:id="@+id/old_man_account_adapter_sex_and_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_4"
            android:text="男  88岁"
            android:textColor="@color/text_666666"
            android:textSize="@dimen/text_size_11" />
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_right"/>
</LinearLayout>