<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/space_11"
    android:paddingRight="@dimen/space_11"
    android:paddingTop="@dimen/space_15"
    android:paddingBottom="@dimen/space_15"
    android:gravity="center_vertical"
    android:background="@color/white">
    <ImageView
        android:id="@+id/physiology_adapter_child_icon"
        android:layout_width="@dimen/space_20"
        android:layout_height="@dimen/space_20" />
    <TextView
        android:id="@+id/physiology_adapter_child_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="体重"
        android:textColor="@color/text_333333"
        android:textSize="@dimen/text_size_14"
        android:layout_marginLeft="@dimen/space_6"
        android:layout_marginRight="@dimen/space_6"/>

    <TextView
        android:id="@+id/physiology_adapter_child_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="75kg"
        android:textColor="@color/text_888888"
        android:textSize="@dimen/text_size_12"/>
</LinearLayout>