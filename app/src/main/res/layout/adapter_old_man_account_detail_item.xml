<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_list_item"
    android:orientation="vertical"
    android:paddingBottom="@dimen/space_14"
    android:paddingTop="@dimen/space_16">

    <TextView
        android:id="@+id/adapter_account_detail_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/space_11"
        android:paddingRight="@dimen/space_11"
        android:text="专业骨折照顾包"
        android:textColor="@color/text_333333"
        android:textSize="@dimen/text_size_13" />

    <TextView
        android:id="@+id/adapter_account_detail_describe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_14"
        android:paddingLeft="@dimen/space_11"
        android:paddingRight="@dimen/space_11"
        android:text="详情描述"
        android:textColor="@color/text_666666"
        android:textSize="@dimen/text_size_12" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/split_line_height"
        android:layout_marginTop="@dimen/space_14"
        android:background="@color/split_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_14"
        android:paddingLeft="@dimen/space_11"
        android:paddingRight="@dimen/space_11">

        <TextView
            android:id="@+id/adapter_account_detail_valid_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="有效期至:2017-12-10"
            android:textColor="@color/red_color"
            android:textSize="@dimen/text_size_11" />

        <TextView
            android:id="@+id/adapter_account_detail_continue_money_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/yellow_color"
            android:paddingBottom="@dimen/space_5"
            android:paddingLeft="@dimen/space_18"
            android:paddingRight="@dimen/space_18"
            android:paddingTop="@dimen/space_5"
            android:text="@string/continue_money"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_12" />
    </LinearLayout>

</LinearLayout>