    <!-- 帮助中心-->
    <LinearLayout
        android:id="@+id/system_setting_help_center_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_list_item"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/space_16"
        android:paddingLeft="@dimen/space_11"
        android:paddingRight="@dimen/space_11"
        android:paddingTop="@dimen/space_16">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/help_center"
            android:textColor="@color/text_333333"
            android:textSize="@dimen/text_size_13" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_right" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/split_line_height"
        android:background="@color/split_line" />

    <!-- 客服热线-->
    <LinearLayout
        android:id="@+id/system_setting_service_phone_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_list_item"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/space_16"
        android:paddingLeft="@dimen/space_11"
        android:paddingRight="@dimen/space_11"
        android:paddingTop="@dimen/space_16">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/service_phone"
            android:textColor="@color/text_333333"
            android:textSize="@dimen/text_size_13" />

        <TextView
            android:id="@+id/system_setting_service_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/ic_phone"
            android:drawablePadding="@dimen/space_5"
            android:gravity="center"
            android:text="400-800-90000"
            android:textColor="@color/main_color" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/system_setting_login_out_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/space_30"
        android:layout_marginLeft="@dimen/space_30"
        android:layout_marginRight="@dimen/space_30"
        android:background="@drawable/shape_button_bg2"
        android:gravity="center"
        android:paddingBottom="@dimen/space_12"
        android:paddingTop="@dimen/space_12"
        android:text="@string/login_out"
        android:textColor="@color/main_color" />
</LinearLayout>