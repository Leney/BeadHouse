<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/selector_list_item"
    android:gravity="center_vertical"
    android:padding="@dimen/space_12">

    <ImageView
        android:id="@+id/guardian_adapter_icon"
        android:layout_width="@dimen/space_77"
        android:layout_height="@dimen/space_77"
        android:src="@mipmap/default_lis_head_icon" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_13"
        android:layout_weight="1"
        android:orientation="vertical">

        <!--姓名部分-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dis_name"
                android:textColor="@color/text_888888"
                android:textSize="@dimen/text_size_12" />

            <TextView
                android:id="@+id/guardian_adapter_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_5"
                android:layout_marginStart="@dimen/space_5"
                android:text="李大帅"
                android:textColor="@color/text_333333"
                android:textSize="@dimen/text_size_12" />
        </LinearLayout>

        <!--关系部分-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_8"
            android:gravity="bottom">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dis_relationship"
                android:textColor="@color/text_888888"
                android:textSize="@dimen/text_size_12" />

            <TextView
                android:id="@+id/guardian_adapter_relationship"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_5"
                android:layout_marginStart="@dimen/space_5"
                android:text="子女"
                android:textColor="@color/text_333333"
                android:textSize="@dimen/text_size_12" />
        </LinearLayout>

        <!--手机号部分-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_8"
            android:gravity="bottom">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dis_phone_num"
                android:textColor="@color/text_888888"
                android:textSize="@dimen/text_size_12" />

            <TextView
                android:id="@+id/guardian_adapter_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_5"
                android:layout_marginStart="@dimen/space_5"
                android:text="13662262644"
                android:textColor="@color/text_333333"
                android:textSize="@dimen/text_size_12" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>