<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <View
        android:id="@+id/schedule_split_view"
        android:layout_width="@dimen/space_2"
        android:layout_height="@dimen/space_40"
        android:layout_centerVertical="true"
        android:layout_marginBottom="@dimen/space_8"
        android:layout_marginTop="@dimen/space_8"
        android:layout_marginLeft="@dimen/space_10"
        android:background="@color/main_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/space_6"
        android:layout_toRightOf="@id/schedule_split_view"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/space_10"
        android:layout_marginBottom="@dimen/space_10"
        android:orientation="vertical"
        android:paddingRight="@dimen/space_10">
        <!-- 服务名称-->
        <TextView
            android:id="@+id/schedule_adapter_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="上门服务"
            android:textColor="@color/text_555555"
            android:textSize="@dimen/text_size_14" />

        <!-- 起始时间-->
        <TextView
            android:id="@+id/schedule_adapter_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_2"
            android:text="08:00-12:00"
            android:textColor="@color/text_999999"
            android:textSize="@dimen/text_size_14" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/split_line_height"
        android:layout_alignParentBottom="true"
        android:background="@color/split_line" />
</RelativeLayout>