<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>



    <!--输入编辑框的样式-->
    <style name="EditStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/space_44</item>
        <item name="android:background">@drawable/shape_edit_input_bg</item>
        <item name="android:paddingRight">@dimen/space_14</item>
        <item name="android:paddingLeft">@dimen/space_14</item>
        <item name="android:textColor">#555555</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColorHint">#aaaaaa</item>
        <item name="android:textSize">@dimen/text_size_12</item>
    </style>



    <!--按钮样式-->
    <style name="ButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/space_43</item>
        <item name="android:background">@drawable/shape_button_bg</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size_16</item>
    </style>

</resources>
